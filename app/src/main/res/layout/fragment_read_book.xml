<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pageNo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/exchange_color">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:importantForAccessibility="no"
        android:src="@drawable/arrow__eft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="VR Books"
        android:textAlignment="center"
        android:textColor="#675E95"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:elevation="5dp"
        app:cardCornerRadius="42dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Best Seller"
                android:textAlignment="center"
                android:textColor="#675E95"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/materialCardView"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <ImageView
                    android:id="@+id/ivBook"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBook2"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBook3"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#C8D4E9"
                app:cardCornerRadius="70dp"
                app:cardElevation="5dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vr_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#C8D4E9"
                app:cardCornerRadius="70dp"
                app:cardElevation="5dp"
                app:layout_constraintStart_toEndOf="@+id/materialCardView"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vr_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#C8D4E9"
                app:cardCornerRadius="70dp"
                app:cardElevation="5dp"
                app:layout_constraintStart_toEndOf="@+id/materialCardView2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vr_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#C8D4E9"
                app:cardCornerRadius="70dp"
                app:cardElevation="5dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/materialCardView3"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vr_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvPopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Currently popular"
                android:textAlignment="center"
                android:textColor="#675E95"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/materialCardView"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPopuler">

                <ImageView
                    android:id="@+id/ivBook4"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBook5"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBook6"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/book5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>